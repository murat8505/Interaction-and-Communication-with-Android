<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Platform compatibility theme here. Specific for the OS versions
             that will be found for this file. API 14-20 in this application -->
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/RedButtonStyle</item>
    </style>

    <style name="BaseDrawerAppTheme" parent="BaseAppTheme">
        <!-- Platform compatibility theme here. Specific for the OS versions
             that will be found for this file. API 14-20 in this application -->
    </style>

    <style name="DrawerAppTheme" parent="BaseDrawerAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="android:buttonStyle">@style/RedButtonStyle</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="BaseThemeOverlayDarkActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Platform compatibility theme here. Specific for the OS versions
             that will be found for this file. API 14-20 in this application -->
    </style>

    <style name="ThemeOverlayDarkActionBar" parent="BaseThemeOverlayDarkActionBar">
        <!-- platform independent configuration here -->
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <item name="android:colorForegroundInverse">@color/bright_foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

</resources>