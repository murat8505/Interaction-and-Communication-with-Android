<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.joeroger.samplesearchshare.fragment.ContactDetailFragment">

    <TextView
        android:id="@+id/name"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        tools:text="John Doe"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_alignStart="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="16dp"
        android:hint="@string/address_hint"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:textAppearance="?android:textAppearanceMedium"/>

    <TextView
        android:id="@+id/birthDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_alignStart="@id/name"
        android:layout_below="@id/address"
        android:layout_marginTop="24dp"
        android:text="@string/birth_date_label"
        android:textAppearance="?android:textAppearanceMedium"/>

    <TextView
        android:id="@+id/birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/birthDateLabel"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/birthDateLabel"
        android:layout_toRightOf="@id/birthDateLabel"
        android:background="?android:editTextBackground"
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="01/01/2015"/>

</RelativeLayout>
