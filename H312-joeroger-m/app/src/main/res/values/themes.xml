<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Platform compatibility theme here. Specific for the OS versions
             that will be found for this file. API 14-20 in this application -->
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">?android:textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Custom overlay to help the spinner in the toolbar be properly styled -->
    <style name="BaseAppThemeOverlayActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/theme.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppThemeOverlayActionBar" parent="BaseAppThemeOverlayActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <item name="android:colorForegroundInverse">@color/bright_foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <!--item name="colorControlNormal">?android:attr/textColorPrimary</item-->
    </style>

</resources>