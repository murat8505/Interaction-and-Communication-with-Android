<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      xmlns:tools="http://schemas.android.com/tools"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:paddingBottom="32dp"
                                      android:paddingLeft="@dimen/activity_horizontal_margin"
                                      android:paddingRight="@dimen/activity_horizontal_margin"
                                      android:paddingTop="@dimen/activity_vertical_margin"
                                      app:columnCount="2"
                                      app:columnOrderPreserved="false"
                                      app:orientation="horizontal"
                                      app:rowCount="6"
                                      app:useDefaultMargins="false"
                                      tools:context="com.example.joeroger.homework1.fragment.ConditionsFragment">

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="center_horizontal"
        app:layout_row="0"
        tools:text="Current Conditions"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:adjustViewBounds="false"
        android:contentDescription="@null"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scaleType="fitCenter"
        android:src="#0F000000"
        app:layout_column="0"
        app:layout_columnWeight=".5"
        app:layout_gravity="fill|center"
        app:layout_row="1"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textSize="88sp"
        app:layout_column="1"
        app:layout_columnWeight=".5"
        app:layout_gravity="fill|center"
        app:layout_row="1"
        tools:text="-88\u00B0"/>

    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="100dp"
        android:paddingBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_column="0"
        app:layout_gravity="top|center_horizontal"
        app:layout_row="2"
        tools:text="Clear"/>

    <TextView
        android:id="@+id/temp_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="100dp"
        android:paddingBottom="16dp"
        android:text="@string/daily_high"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="gone"
        app:layout_column="1"
        app:layout_gravity="top|center_horizontal"
        app:layout_row="2"
        tools:text="High"/>

    <TextView
        android:id="@+id/wind_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="@string/wind_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_row="3"/>

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_column="1"
        app:layout_gravity="fill"
        app:layout_row="3"
        tools:text="88mph NNE"/>

    <TextView
        android:id="@+id/pressure_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="@string/pressure_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_row="4"/>

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_column="1"
        app:layout_gravity="left"
        app:layout_row="4"
        tools:text="30.2"/>

    <TextView
        android:id="@+id/humidity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="@string/humidity_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_row="5"/>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_column="1"
        app:layout_gravity="fill"
        app:layout_row="5"
        tools:text="88%"/>

</android.support.v7.widget.GridLayout>
